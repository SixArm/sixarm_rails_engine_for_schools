<%
  schools||=@schools
%>
<div class="views schools table">
  <table class="data sortable">
    <thead>
      <tr>
        <th><%=t('ID')%></th>
        <th><%=t('XID')%></th>
        <th><%=t('Name')%></th>
      </tr>
    </thead>
    <tbody>
      <% schools.each do |x| %>
        <tr>
          <td><%=x.id%></td>
          <td><%=x.xid%></td>
          <td><%=x.name%></td>
        </tr>
      <%  end %>
    </tbody>
    <tfoot></tfoot>
  </table>
</div>
